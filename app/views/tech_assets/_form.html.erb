<%= simple_form_for @tech_asset, html: { multipart: true } do |f| %>
  <% if @tech_asset.errors.any? %>
    <div id="errors">
      <h2>
        <%= pluralize(@tech_asset.errors.count, "error") %>
        prevented this asset from saving
      </h2>
      <ul>
        <% @tech_asset.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.input :title, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, input_html: { class: 'form-control' } %>
  </div>
  <div class="form-group">
    <%= f.select :location, options_for_select([['Canada'], ['USA'], ['India']]) %>
  </div>

  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
